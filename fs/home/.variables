#!/bin/bash

#default terminal
export term=konsole

#default editor
export edit=vim

#gitdir
export gitdir=~/git

#utils
export utilsdir=$gitdir/utils
export scriptsdir=$utilsdir/scripts
export fsdir=$utilsdir/fs
export backupdir=$utilsdir/fs_backup

#bash
export bashrc=~/.bashrc
export aliases=~/.aliases
export variables=~/.variables
export session_variables=~/.session_variables

#vim
export vimrc=~/.vimrc
export vimdir=~/.vim

#git
declare -A git_users
git_users["avivilloz"]="avivilloz@gmail.com"
git_users["ailloz"]="ailloz@akamai.com"

#path
export PATH="$HOME/.local/bin:$PATH"
