#!/bin/bash

#default terminal
export term=konsole

#default editor
export edit=vim
export edit_flags=-p

#gitdir
export gitdir=~/git

#config
export utilsdir=$gitdir/utils
export scriptsdir=$utilsdir/scripts

#bash
export bashrc=~/.bashrc
export aliases=~/.aliases
export variables=~/.variables

#vim
export vimrc=~/.vimrc
export vimdir=~/.vim

#git
export git_user_name=avivilloz
export git_user_email=avivilloz@gmail.com

#work
export workdir=$gitdir/work

#path
export PATH="$HOME/.local/bin:$PATH"

#current project
export currpdir="$gitdir"
