#!/bin/bash

#default terminal
export term=konsole

#default editor
export edit=vim
export edit_flags=-p

#gitdir
export gitdir=~/git

#config
export utilsdir=$gitdir/utils
export scriptsdir=$utilsdir/scripts

#bash
export bashrc=~/.bashrc
export aliases=~/.aliases
export variables=~/.variables

#vim
export vimrc=~/.vimrc
export vimdir=~/.vim

#git
declare -A git_users
git_users["avivilloz"]="avivilloz@gmail.com"
git_users["ailloz"]="ailloz@akamai.com"

#work
export workdir=$gitdir/work

#path
export PATH="$HOME/.local/bin:$PATH"

#current project
export currpdir="$gitdir"
